generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TelegramGroup {
  id          Int      @id @default(autoincrement())
  telegramId  BigInt   @unique // ID do chat no Telegram
  username    String
  title       String?
  description String?
  photoPath   String?
  type        String?
  fetchedAt   DateTime @default(now()) @updatedAt

  @@index([username])
  @@index([telegramId])
}








